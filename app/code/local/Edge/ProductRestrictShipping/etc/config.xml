                <resourceModel>productrestrictshipping_resource</resourceModel>
            </productrestrictshipping>
            <productrestrictshipping_resource>
                <class>Edge_ProductRestrictShipping_Model_Resource</class>
                <entities>
                    <productRestrictShipping>
                        <table>productrestrictshipping</table>
                    </productRestrictShipping>
                </entities>
            </productrestrictshipping_resource>
        </models>
        <resources>
            <productrestrictshipping_setup>
                <setup>
                    <module>Edge_ProductRestrictShipping</module>
