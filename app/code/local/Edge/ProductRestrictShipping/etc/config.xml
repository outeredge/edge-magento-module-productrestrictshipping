<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Edge_ProductRestrictShipping>
            <version>1.0.0</version>
        </Edge_ProductRestrictShipping>
    </modules>
    <global>
        <models>
            <productrestrictshipping>
