<?xml version="1.0"?>
<config>
    <tabs>
        <edge translate="label" module="productrestrictshipping">
            <label>outer/edge</label>
            <sort_order>200</sort_order>
        </edge>
    </tabs>
    <sections>
        <prshipping translate="label" module="productrestrictshipping">
            <class>separator-top</class>
            <label>Product Shipping Restrictions</label>
            <tab>edge</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <prshipping translate="label comment">
                    <label>General</label>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <options translate="label comment">
                            <label>Attribute code</label>
                            <comment>Select atribute code to restrict shipping.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>productrestrictshipping/Options</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </options>
                        <message translate="label comment">
                            <label>Message</label>
                            <comment>Message shown to customer when product cannot be shipped.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </message>
                    </fields>
                </prshipping>
            </groups>
        </prshipping>
    </sections>
</config>